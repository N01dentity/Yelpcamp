<% layout('layouts/boilerplate')%>
    <div class="container d-flex justify-content-center align-items-center mt-5 ml-3">
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1560185687-ee01b6e9a24a?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MjY0fHxjYW1waW5nfGVufDB8fDB8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60"
                        alt="" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Register</h5>
                        <form action="/register" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" required
                                    autofocus>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="email" id="email" name="email" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <button class="btn btn-success btn-block "style="width:100%">Register</button>
                            <div class="mt-3 d-flex justify-content-end">
                            <a href="login">Already have an account?</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>